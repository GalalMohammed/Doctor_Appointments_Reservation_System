@{
}



@{
    ViewData["Title"] = "File Upload";
}

<h2>@ViewData["Title"]</h2>

<div>
    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <div>
            <img src="~/uploads/images/@ViewData["FileName"]" alt="Alternate Text" />
            <label for="file">Choose file to upload</label>
            <input class="form-control w-50 rounded" style="height:60px" type="file" name="file" id="file" />
        </div>
        <div>
            <button class="btn btn-success" type="submit">Upload File</button>
        </div>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <div>
        <strong>@ViewData["Message"]</strong>
        @if (ViewData["FileName"] != null)
        {
            <p>Uploaded File: @ViewData["FileName"]</p>
        }
    </div>
}
