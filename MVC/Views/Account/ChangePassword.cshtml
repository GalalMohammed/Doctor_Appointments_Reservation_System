@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg SP-card">
        <h2 class="text-center SP-primaryText">Change Password</h2>
        <p class="text-center">Enter your old and new password below</p>

        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <div class="mb-3 position-relative">
                <label class="form-label SP-primaryText" for="OldPassword">Old Password</label>
                <div class="input-group">
                    <input asp-for="OldPassword" id="OldPassword" class="form-control" type="password" placeholder="Enter new password">
                    <button type="button" class="btn SP-toggle-password" data-target="#OldPassword">
                        <i class="fa-solid fa-eye eye-icon"></i>
                    </button>
                </div>
                <span class="text-danger" asp-validation-for="OldPassword"></span>
            </div>
            <div class="mb-3 position-relative">
                <label class="form-label SP-primaryText" for="NewPassword">New Password</label>
                <div class="input-group">
                    <input asp-for="NewPassword" id="NewPassword" class="form-control" type="password" placeholder="Enter new password">
                    <button type="button" class="btn SP-toggle-password" data-target="#NewPassword">
                        <i class="fa-solid fa-eye eye-icon"></i>
                    </button>
                </div>
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>

            <div class="mb-3 position-relative">
                <label class="form-label SP-primaryText" for="ConfirmPassword">Confirm Password</label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password">
                    <button type="button" class="btn SP-toggle-password" data-target="#ConfirmPassword">
                        <i class="fa-solid fa-eye eye-icon"></i>
                    </button>
                </div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn SP-resetBTN w-100">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll(".SP-toggle-password").forEach(button => {
            button.addEventListener("click", function() {
                let input = document.querySelector(this.getAttribute("data-target"));
                let icon = this.querySelector(".eye-icon");

                if (input.type === "password") {
                    input.type = "text";
                    icon.classList.replace("fa-eye", "fa-eye-slash"); // Change icon to eye-slash
                } else {
                    input.type = "password";
                    icon.classList.replace("fa-eye-slash", "fa-eye"); // Change icon to eye
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.all.min.js"></script>
    <script>var success = "@(ViewBag.Success)";</script>
    <script src="~/js/change-password.js"></script>
}